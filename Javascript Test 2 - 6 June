//accept a string as a parameter and counts the number of vowels within the string
function countVowels (str){
  var words = str.split('');
  var amtvowels= 0 ;
 
 
 for (var i=0;i<words.length; i++){
      if (str[i]== "a" || str [i]== "e" || str[i] == "i" || str[i]=="o"|| str [i]=="u"){
      amtvowels++}
 
 }
    return amtvowels;
}

console.log (countVowels("hospital"));





